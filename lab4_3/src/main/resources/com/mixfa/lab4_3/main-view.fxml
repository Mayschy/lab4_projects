<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="192.0" prefWidth="348.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mixfa.lab4_3.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="192.0" prefWidth="348.0">
        <children>

            <Label fx:id="welcomeText" />
            <Button layoutX="14.0" layoutY="130.0" onAction="#calculate" prefHeight="25.0" prefWidth="210.0" text="Calculate" />
            <RadioButton fx:id="plusBtn" layoutX="14.0" layoutY="17.0" mnemonicParsing="false" selected="true" text="+">
            <toggleGroup>
               <ToggleGroup fx:id="action" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="minusBtn" layoutX="14.0" layoutY="40.0" mnemonicParsing="false" text="-" toggleGroup="$action" />
            <RadioButton fx:id="divideBtn" layoutX="14.0" layoutY="64.0" mnemonicParsing="false" text="/" toggleGroup="$action" />
            <RadioButton fx:id="multBtn" layoutX="14.0" layoutY="88.0" mnemonicParsing="false" text="*" toggleGroup="$action" />
            <TextField fx:id="firstField" layoutX="69.0" layoutY="13.0" />
            <TextField fx:id="secondField" layoutX="69.0" layoutY="52.0" />
            <Label fx:id="answerLabel" layoutX="74.0" layoutY="97.0" text="Answer" />
        </children>
    </AnchorPane>
</VBox>
